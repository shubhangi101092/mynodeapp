<% include ./common/header %>
<h1 style="padding:10px;">User List  <a style="float:right; font-size:15px;" href="/users/add">Add user</a> </h1>
<table class="table table-condensed table-hover">
    <tr>
<th>Name</th>
<th>User Name</th>
<th>Email</th>
<th>Phone no</th>
<th>Action</th>
</tr>
<% users.forEach(function (user){ %>
<tr>
<td><%= user.name %> </td>
<td><%= user.username %> </td>
<td><%= user.email %> </td>
<td><%= user.phone %> </td>
<td><a href="/users/<%= user.id%>">View/</a> <a href="/edit/<%= user.id%>">Edit/</a> <form method="post" action="/deluser/<%= user.id%>?method=DELETE"><button class="btn btn-link">Delete</button></form></td>
</tr>
<% }) %>
</table>

<% include ./common/footer %>